@import('../vendor.styl')
@import('../util.styl')

.fancy-title {
  line-height: 1.6;
  font-size: 32px;
  color: #000;
  margin-right: 10px;
  float left
  margin-top: -12px;
}
.fancy_text {
  font-size 16px
  clear: both;
}
.fancy_en {
  font-size 24px
  color themeColor
  text-transform uppercase
  font-weight 100
  margin-top 7px
}
.title_row {
  margin-bottom 50px
}
.menu_row {
  margin-bottom 0
}

/*pro_row*/
.pro_row {
  margin-bottom 100px
  .vc_column {
    float left
  }
}
.pro_right {
  width 84%
  padding-left 1%
  .table_wrap {
    overflow-y auto
  }
  table {
    width 100%
    border-right 1px solid #e6e6e6
    border-top 1px solid #e6e6e6
    font-size 14px
    th{
      padding 8px 10px
      background #fafafa
      border-left 1px solid #e6e6e6
      border-bottom 1px solid #e6e6e6
    }
    td {
      padding 10px
      border-left 1px solid #e6e6e6
      border-bottom 1px solid #e6e6e6
    }
    tr {
      background #fff;
      td:first-child {
        color themeColor
      }
    }
    tr:hover {
      background #fafafa
    }
  }
}
.pro_left {
  width 16%
  min-height 100px
  a {
    background #fff
    border-bottom 1px solid #f3f3f3
    line-height 2.5
    padding-left 10%
    display block
  }
  .pro_active a {
    background themeColor
    color #fff
    padding-left 0
    text-align center
  }
}

.pagination {
  margin 50px 0
  font-size 14px
}
.pagination li {
  display: inline-block;
}
.pagination a {
  display: block;
  border-radius: 3px;
  margin: 0 15px;
  &:hover {
    color themeColor
  }
}
.pagination .active a {
  background themeColor
  color #fff
  padding: 0 10px;
}
.search_row {
  text-align center
  margin 5px 0
}
.search_input {
  width 500px
  display inline-block
  vertical-align middle
  position relative
  margin 0 5px
  input {
    background #fff
    padding 15px 83px 15px 15px
    text-align center
    border 0
    height 68px;
    -webkit-appearance none
    width 100%
    font-size 16px
  }
  button {
    position absolute
    top: 0
    right 0
    border 0
    width 68px;
    height 68px
    background-color themeColor
    background-repeat no-repeat
    background-position center
    background-image url("/wp-content/uploads/2019/11/i_search.png")
  }
}
.reset_pro_btn {
  margin 0 5px
  display inline-block
  vertical-align middle
  border 0
  font-size 16px
  line-height 2
  padding-left 40px
  padding-right 15px
  background-color themeColor
  background-repeat no-repeat
  background-position 15px 50%
  background-image url("/wp-content/uploads/2019/11/trash.png")
  background-size 20px
  color #fff
}
a.export_btn {
  margin 0 5px
  display inline-block
  vertical-align middle
  border 0
  font-size 16px
  line-height 2
  padding-left 40px
  padding-right 15px
  background-color themeColor
  background-repeat no-repeat
  background-position 15px 50%
  background-image url("/wp-content/uploads/2019/11/export-1.png")
  background-size 20px
  color #fff
}
.pdf_btn {
  background themeColor
  color #fff
  font-size 14px
  line-height 1.8
  border-radius 3px
  width 100%
  border 0
  box-shadow none
}
