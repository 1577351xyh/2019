@import('../vendor.styl')
@import('../util.styl')

.fancy-title {
  line-height: 1.6;
  font-size: 32px;
  color: #000;
  margin-right: 10px;
  float left
  margin-top: -12px;
}
.fancy_text {
  font-size 16px
  clear: both;
}
.fancy_en {
  font-size 24px
  color themeColor
  text-transform uppercase
  font-weight 100
  margin-top 7px
}
.title_row {
  margin-bottom 50px
}

/**form_row**/
#theme-page {
  .form-field {
    margin-left: 0;
    position relative
    padding 0 10px
    width 33.3333%
    label {
      position absolute
      left 30px
      font-weight normal
      color #666
      top 30px
    }
    input {
      border-radius 0
      background #fff
      border 0
      box-shadow 0
      -webkit-appearance none
      font-size 16px
      height 80px
      padding-left 90px
      color #333
    }
    textarea {
      background #fff
      border 0
      box-shadow 0
      -webkit-appearance none
      font-size 16px
      border-radius 0
      height 200px
      padding-left 90px
      padding-top 30px
      color #333
    }
  }
  .frm_submit {
    text-align center
    margin-bottom 100px
  }
  .frm_button_submit {
    width 170px
    background themeColor
    color #fff
    border 0
    border-radius 0
    box-shadow none
    padding 0
    line-height 2.75
    font-size 16px
    margin 0
  }
}

