@import('./vendor.styl')
@import('./reset.styl')
@import('./util.styl')

global-reset()


html,
body {
  overflow-x: hidden;
  width: 100%;
}
body {
  font-size: 16px;
  line-height: 1.6;
  color: #666;
  font-family: '微软雅黑', '黑体', Arial, Sans-serif;
  background #f3f3f3
}
a, a:link, a:visited {
  color: #666;

}
a:hover {
  color: themeColor;
  text-decoration: none;
}
a {
  transition: all .3s;
  cursor: pointer;
}
select:focus,
video:focus,
input:focus,
button:focus {
  outline 0
}
img {
  max-width: 100%;
  transition: all .3s ease-in-out;
  line-height: 1;
  height auto
}
.clearboth {
  clear: both;
}
.vc_row > .vc_wrapper {
  max-width: wrapper;
  margin: 0 auto;
}
::-webkit-input-placeholder {
  /* WebKit, Blink, Edge */
  color: #ccc;
}

:-moz-placeholder {
  /* Mozilla Firefox 4 to 18 */
  color: #ccc;
}

::-moz-placeholder {
  /* Mozilla Firefox 19+ */
  color: #ccc;
}

:-ms-input-placeholder {
  /* Internet Explorer 10-11 */
  color: #ccc;
}

.adaptive-swiper {
  .swiper-container {
    overflow visible
  }
}
.vc_video-box {
  position: relative;
}
.vc_video-poster {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  transition: all 0.3s;
  cursor: pointer;
  &:before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background: rgba(0,0,0,0.1);
  }
  &:after {
    content: '';
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -40px;
    margin-top: -40px;
    width: 80px;
    height: 80px;
    z-index: 2;
    background: url(/wp-content/uploads/2019/11/play_btn.png) no-repeat center/contain;
  }
  &:hover:after {
    background-image: url(/wp-content/uploads/2019/11/play_btn_active.png);
  }
}
.vc_video-play .vc_video-poster {
  opacity: 0;
  z-index: -1;
}
.m_visible {
  display none
}
html .hide {
  display: none;
}
.pagination.swiper-pagination-bullets {
  text-align center
}
.theme-page {
  margin-top headerHei
}

//除首页外的 banner css & breadcrumb css
/*banner*/
.banner_row {
  padding 100px 0
  position: relative;
  color #fff
}
.banner_en,
.banner_title {
  font-size 32px
  line-height 1.4
}
.banner_en {
  font-weight 100
  text-transform uppercase
}

/*menu_row*/
.menu_row {
  background #fff
  height 68px
  line-height 68px
  margin-bottom 70px
}
.menu_left {
  float left
}
.menu_right {
  float right
  .menu {
    &:after {
      content ''
      display block
      clear both
    }
  }
  .menu-item {
    padding: 0 15px;
    height: 100%;
    position: relative;
    margin-left: 20px;
    float left
    a {
      display: block;
      height: 100%;
      color: #000;
      &:hover {
        color themeColor;
      }
    }
  }
  .current-menu-item{
    position relative
    a {
      color themeColor
    }
    &:after {
      content ''
      display block
      width 100%
      height 4px
      position absolute
      left 0
      bottom 0
      background themeColor
    }
  }
}

@media (max-width: 1600px){
  .vc_row > .vc_wrapper {
    padding: 0 4%;
  }
}

@media (max-width: 767px){
  html,body {
    width 100%
    overflow-x hidden
  }
  .m_visible {
    display block
  }
  .pc_visible {
    display none
  }
  .adaptive-swiper .swiper-container {
    overflow: hidden;
  }
  .vc_video-poster:after {
    background-size 60px
  }
}
