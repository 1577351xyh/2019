@import('./vendor.styl')
@import('./util.styl')

.fancy-title {
  line-height: 1.6;
  font-size: 32px;
  color: #000;
  margin-right: 10px;
  float left
}
.fancy_text {
  font-size 16px
  clear: both;
}
.fancy_en {
  font-size 24px
  color themeColor
  text-transform uppercase
  font-weight 100
}
.title_row {
  margin-bottom 40px
}

/*banner*/
.index_banner {
  padding-top 200px
  padding-bottom 250px
  margin-bottom: 100px;
  position: relative;
  color #fff
}
.index_banner_title {
  font-size 48px
  font-weight: 500;
}
.index_banner_text {
  font-size 30px
  margin-bottom 40px
}
.banner_btn {
  font-size 0
  p {
    display inline-block
    vertical-align middle
    width 170px
    margin-right 15px
  }
  a {
    display block
    line-height 3
    text-align center
    color #fff
    &:hover {
      background themeColor
      border-color themeColor
    }
  }
  .banner_more_btn {
    font-size 16px
    border 1px solid #fff
  }
  .banner_about_btn {
    font-size 16px
    background themeColor
    border 1px solid themeColor
  }
}

/*pro_list*/
.pro_list {
  margin-bottom 100px
  > .vc_wrapper {
    max-width 1620px
  }
  .vc_column {
    width 33.3333%
    float left
    padding: 0 10px;
    margin-bottom: 20px;
  }
  .vc_column-box {
    background #fff
    padding 30px 20px 30px 30px
  }
}
.last_pro {
  .vc_column-box {
    padding: 0;
  }
  a {
    background themeColor
    height 180px
    color #fff
    font-size 22px
    display block
    line-height 1.2
    padding: 20% 30px 0px 30px;
  }
  b {
    font-size 30px
    font-weight: 400;
  }
}
.pro_title {
  font-size 20px
  color #000
  margin-bottom: 3px
  p {
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  }
}
.pro_text {
  font-size 14px
  height 50px
  margin-bottom 10px
  overflow hidden
}
.pro_btn {
  a {
    color themeColor
  }
}
.pro_img {
  float right
  width: 40%;
}

/*app_row*/
.app_row {
  margin-bottom 100px
  > .vc_wrapper {
    max-width 1620px
  }
  .vc_column {
    width 33.3333%
    float left
    padding: 0 10px;
    margin-bottom: 20px;
  }
  .vc_column-box {
    position relative
    overflow hidden
    &:hover {
      img {
        transform scale(1.2)
      }
    }
  }
  .mk-image {
    img {
      display block
      transition all 1s ease-in-out
    }
  }
}
.app_title {
  position: absolute;
  width 100%
  height 100%
  background rgba(0,0,0,.4)
  left 0
  top 0
  p {
    height 100%
  }
  a {
    position relative
    display block
    width 100%
    height 100%
    color #fff
    font-size 22px
    padding 60% 30px 0 30px
    &:hover {
      color themeColor
    }
  }

}

/*res_row*/
.res_row {
  margin-bottom 100px
  > .vc_wrapper {
    max-width 1620px
  }
  .vc_column {
    float left
    padding 0 10px
  }
  .vc_row {
    padding 30px
    position relative
  }
}
.res_left {
  width 37.5%
}
.res_right {
  width 62.5%
}
.res_left_row {
  background-color themeColor
  background-image url("/wp-content/uploads/2019/11/res1.png")
  background-repeat no-repeat
  background-position 85% 70%
  color #fff
  height 500px
  .res_btn {
    a {
      color #fff
    }
  }
}
.res_right_row {
  background-color #fff
  background-repeat no-repeat
  background-position 92% 50%
  height 240px
}
.res_right_1 {
  background-image url("/wp-content/uploads/2019/11/res2.png")
  margin-bottom 20px
}
.res_right_2 {
  background-image url("/wp-content/uploads/2019/11/res3.png")
}
.res_title {
  font-size 22px
  margin-bottom 10px
}
.res_text {
  max-width 80%
}
.res_btn {
  position absolute
  left 30px
  bottom 30px
  a {
    color themeColor
  }
}

/*vision_row*/
.vision_row {
  margin-bottom 100px
  .vc_column {
    width 50%
    float left
  }
  .vc_column-inner {
    float left
    width 50%
  }
  .mk-image {
    img {
      display block
      transition all 1s ease-in-out
    }
  }
  .vc_row {
    > .vc_wrapper {
      display flex
      justify-content center
      align-items stretch
    }
  }

}
.vision_text_box {
  background url(/wp-content/uploads/2019/11/v_bg.jpg) no-repeat center
  display flex
  align-items center
  justify-content center
}
.vision_desc p {
  margin-bottom: 10px;
  text-indent: 32px;
}
.vision_text {
  line-height 1.4
  p {
    margin-bottom 7px
  }
  strong {
    background: #fff;
    display: inline-block;
    padding: 0 5px;
  }
}

/*join_row*/
.join_row {
  padding 150px 0
  .fancy-title {
    color #fff
  }
  .fancy_text {
    margin-top 40px
    margin-bottom 60px
    color #fff
    max-width 560px
  }
}
.join_btn {
  a {
    display inline-block
    line-height 2.8
    text-align center
    color #fff
    font-size 18px
    background themeColor
    width auto
    padding 0 10px
  }
}

@media (max-width: 1600px) {
  .vision_row {
    .vc_row {
      > .vc_wrapper {
        padding 0
      }
    }
  }
  .res_row {
    .vc_row {
      > .vc_wrapper {
        padding 0
      }
    }
  }
  .pro_list,
  .app_row,
  .res_row {
    margin 0 -10px 100px
  }
}

