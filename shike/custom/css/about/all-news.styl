@import('../vendor.styl')
@import('../util.styl')

.fancy-title {
  line-height: 1.6;
  font-size: 32px;
  color: #000;
  margin-right: 10px;
  float left
  margin-top: -12px;
}
.fancy_text {
  font-size 16px
  clear: both;
}
.fancy_en {
  font-size 24px
  color themeColor
  text-transform uppercase
  font-weight 100
  margin-top 7px
}
.title_row {
  margin-bottom 50px
}

/**all-row**/
.all_row {
  .vc_column {
    float left
  }
}
.all_left {
  width 66%
}
.all_right {
  width 34%
  padding-left 3%
}

/**focus-swiper**/
.focus-swiper {
  margin-bottom 30px
}
.focus_box {
  position relative
  display block

}
.focus_img {
  img {
    display block
  }
}
.focus_title {
  color #fff
  font-size 20px
  white-space nowrap
  overflow: hidden
  text-overflow ellipsis
  padding 0 20px
  line-height 2.5
  background rgba(0, 205, 251, 0.53)
  position absolute
  left 0
  bottom 0
  width 100%
  text-align center
}
.swiper-container-horizontal>.swiper-pagination-bullets, .swiper-pagination-custom, .swiper-pagination-fraction {
  bottom: 50px;
  left: 0;
  width: 100%;
  text-align: center;
  position: absolute;
  z-index: 1;
}
.swiper-pagination-bullet-active {
  background: #fff;
}

.blog_list {
  margin 0 -10px 50px
}
.blog_item {
  padding: 0 10px;
  margin-bottom 15px
}
.blog_box {
  background: #fff;
  padding: 15px;
}
.blog_img {
  float left
  width 240px
  display block
  margin-right 20px
  overflow hidden
  img {
    display block
    transition all 1s ease-in-out
  }
  &:hover {
    img {
      transform scale(1.2)
    }
  }
}
.blog_right {

}
.blog_title {
  margin-bottom 15px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  a {
    font-size 20px
    color #333
    &:hover {
      color themeColor
    }
  }
}
.blog_excerpt {
  font-size 14px
  height 100px
}
.blog_caption {
  color #999
  font-size 14px
  line-height 1
}
.blog_view {
  display: inline-block;
  float: right;
  padding-left: 33px;
  background: url(/wp-content/uploads/2019/11/view.png) no-repeat center left;
}
.mk-pagination {
  margin-bottom 100px
  span {
    display inline-block
    margin 0 10px
  }
  a {
    display inline-block
    margin 0 10px
  }
}
.current-page {
  background themeColor
  color #fff
  padding 0 10px
}
.mk-pagination-previous,
.mk-pagination-next {
  display inline-block
}

.ind_title_row {
  margin-bottom 15px
  &:after {
    content ''
    display block
    clear both
  }
}
.right_ind {
  background #fff
  padding 25px 20px 20px
  margin-bottom 30px
  a {
    //color #333
    font-size 15px
    &:hover {
      color themeColor
    }
  }
  li {
    margin-bottom 10px
  }
}
.right_title {
  font-size 24px
  color #000
  float left
  margin-right 10px
  margin-top: -5px;
}
.right_title_en {
  font-size: 20px;
  text-transform: uppercase;
  color themeColor
  font-weight 100
}
.ind_time {
  float: right;
  color #999;
  margin-left: 10px;
}
.ind_title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pro_title_row {
  margin-bottom 10px
  &:after {
    content ''
    display block
    clear both
  }
  background #fff
  padding 20px 20px 15px
}
.right_pro {
  li {
    background #fff
    margin-bottom 10px
    padding 15px 20px
  }
}
.pro_img {
  background #fff
  float right
  overflow hidden
  width 110px
  img {
    display block
    transition all 1s ease-in-out
  }
  &:hover {
    img {
      transform scale(1.2)
    }
  }
}
.pro_title {
  height 40px
  overflow hidden
  line-height 1.2
  margin-bottom 5px
 a {
   //color #333
   &:hover {
     color themeColor
   }
 }
}
.pro_time {
  line-height 1
  color #999;
  font-size 14px
}

