/**responsive-nav-container**/
.responsive-nav-container {
  display: none;
  position: absolute;
  top mHeaderHei
  left 0
  width: 100%;
  z-index: 100;
  background #fff
  overflow-y scroll
  .menu-item {
    border-top: 1px solid #f2f2f2;
    a {
      padding: 0 35px;
      font-size: 20px;
      line-height 60px
      color: #333;
      display block
    }
    a:hover {
      color: themeColor;
    }
  }
  .sub-menu {
    background #e5e5e5
    a {
      padding-left 55px
    }
    a:hover {
      color: #333;
    }
    .sub-menu {
      a {
        padding-left 55px
        font-size 18px
        color #666
      }
      a:hover {
        color: themeColor;
      }
    }
  }
  .menu {
    > .menu-item-has-children {
      > ul {
        display none
        >li {
          //> a {
          //  display none
          //}
        }
      }
      > a {
        position relative
        &:after  {
          content ''
          display: block
          position absolute
          right 10px
          top 0;
          height 100%;
          width 56px
          background url('/wp-content/uploads/2019/11/menu_fold.png') no-repeat center / 20px auto
        }
        &:hover {
          color #333
        }
      }
    }
    .menu-opened {
      > a {
        color: themeColor!important;
        &:after {
          background-image url('/wp-content/uploads/2019/11/menu_unfold.png')
        }
      }
    }
  }
  .menu-item-language-current,
  .current_page_ancestor,
  .current_page_item {
    > a {
      color: themeColor!important;
    }
  }
  .phone_menu_item,
  .consult_menu_item {
    border-top: 0;
  }
  .qr_menu_item,
  .phone_menu_item,
  .consult_menu_item {
    a {
      line-height 46px
      padding-left 80px
      background-repeat no-repeat
      background-position 35px 50%
      background-size auto 50%
    }
  }

}


/**responsive-nav-link**/
.responsive-nav-link {
  float: right;
  position: relative;
  display: none;
  height: mHeaderHei;
  width: 28px;
  background url("/wp-content/uploads/2019/11/m_menu_0.png") no-repeat center / contain
}
.res-nav-opened {
  overflow: hidden;
  height: 100%;
  width: 100%;
  position: fixed;
}
.responsive-nav-link.active-burger {
  background-image: url(/wp-content/uploads/2019/11/m_menu_close.png);
}

@media (max-width: 1600px){
  .main-navigation-ul {
    padding 0 4%
    .menu-item {
      padding: 0 20px;
    }
  }
}

@media (max-width: 1480px){
  .hdr-shop a {
    margin-right: 20px;
  }
  .mk-header-logo {
    margin-right: 2%;
  }
  .mk-header {
    #lang_sel {
      margin 0 20px
    }
  }

}

@media (max-width: 1280px){
  .hdr-search {
    opacity 0
    visibility hidden
    position fixed
    width: 100%;
    top headerHei
    left 0
    input {
      width 100%
    }
  }
  .hdr-search-show {
    opacity 1
    visibility visible
  }
  .hdr-search-icon {
    display block
    width 40px
    height headerHei
    background url("/wp-content/uploads/2019/11/i_search_black.png") no-repeat center
  }
}

@media (max-width: 1024px){
  .menu-item-language {
    display: block;
  }
  .mk-header {
    position fixed
    height: mHeaderHei;
  }
  #theme-page {
    margin-top mHeaderHei
  }
  .responsive-nav-link{
    display block
  }
  .header-right {
    display none
  }
  .main-navigation-ul {
    .menu-item {
      display none
    }
  }
  .mk-header-logo {
    width 200px
    height mHeaderHei
    padding-top 0
    margin-top 0
    background url('/wp-content/uploads/2019/11/logo_216x116.png') no-repeat left center / auto 70% ;
    img {
      opacity 0
      height 100%
    }
  }
  .mk-header:hover,
  .scroll-header,
  .fixed-header {
    background: #fff;
  }
}

